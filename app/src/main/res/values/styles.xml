<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--FilledBox일 경우 밑줄 색상, OutlinedBox일 경우 테두리 색상-->
<!--        <item name="boxStrokeColor">@color/selector_text_input_outlined_color</item>-->
        <!--EditText에 있을때의 Hint-->
        <item name="android:textColorHint">#BDBDBD</item>
        <!--상단에 있을때의 Hint-->
        <item name="hintTextColor">#BDBDBD</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <!--Helper-->
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <!--Error-->
        <item name="errorEnabled">true</item>
        <item name="colorError">#FF0000</item>
        <item name="errorIconDrawable">@drawable/icon_signup_error</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HelperTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutDropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!--FilledBox일 경우 밑줄 색상, OutlinedBox일 경우 테두리 색상-->
        <!--        <item name="boxStrokeColor">@color/selector_text_input_outlined_color</item>-->
        <!--EditText에 있을때의 Hint-->
        <item name="android:textColorHint">#BDBDBD</item>
        <!--상단에 있을때의 Hint-->
        <item name="hintTextColor">#BDBDBD</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>
    <style name="CalendarDateText">
        <item name="android:textSize">16sp</item> <!-- 날짜 텍스트 크기 설정 -->
        <item name="android:textColor">#000000</item> <!-- 날짜 텍스트 색상 설정 -->
    </style>
</resources>