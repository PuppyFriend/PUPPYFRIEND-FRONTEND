        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:lineHeight="25.26dp"
            android:text="카테고리"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_category_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/selector_sns_posting_category_question" />

        <TextView
            android:id="@+id/text_category_question"
            android:layout_width="27dp"
            android:layout_height="15dp"
