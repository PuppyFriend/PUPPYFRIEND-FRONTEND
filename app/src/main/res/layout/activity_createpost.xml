<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="740dp"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_content_background"
        android:layout_width="wrap_content"
        android:layout_height="259dp"
        android:background="@color/white"
        android:layout_marginTop="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_create_post_line1"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="94dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_create_post_line2"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="353dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_create_post_line3"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="397dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_create_post_line4"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="436dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/view_content_background"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:gravity="left"
            android:hint="내용을 입력하세요."
            android:text=""
            android:textColor="#40000000"
            app:layout_constraintStart_toEndOf="@+id/text_background_color"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="366dp"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:lineHeight="25.26dp"
            android:text="배경색"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/style_sns_posting_backgroundcolor_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_blue_check"
            android:layout_width="11dp"
            android:layout_height="6.5dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/icon_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view_background_color_green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="111dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/style_sns_posting_backgroundcolor_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_green_check"
            android:layout_width="11dp"
            android:layout_height="6.5dp"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/icon_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_orange"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/style_sns_posting_backgroundcolor_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_orange_check"
            android:layout_width="11dp"
            android:layout_height="6.5dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/icon_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_yellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="167dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/style_sns_posting_backgroundcolor_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_yellow_check"
            android:layout_width="11dp"
            android:layout_height="6.5dp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/icon_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_pink"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="363dp"
            android:background="@drawable/style_sns_posting_backgroundcolor_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_background_color_pink_check"
            android:layout_width="11dp"
            android:layout_height="6.5dp"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/icon_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="406dp"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:lineHeight="25.26dp"
            android:text="카테고리"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_category_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="407dp"
            android:background="@drawable/selector_sns_posting_category_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_category_question"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:layout_marginTop="409dp"
            android:fontFamily="@font/roboto_bold"
            android:lineHeight="12.89dp"
            android:text="질문"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="@+id/img_category_question"
            app:layout_constraintStart_toStartOf="@+id/img_category_question"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_category_worry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="127.3dp"
            android:layout_marginTop="407dp"
            android:background="@drawable/selector_sns_posting_category_worry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_category_worry"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="409dp"
            android:fontFamily="@font/roboto_bold"
            android:lineHeight="12.89dp"
            android:text="고민"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_image_in_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.88dp"
            android:layout_marginTop="456dp"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:lineHeight="25.26dp"
            android:text="게시물 내 이미지 0/1"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_gallery"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="7dp"
            android:background="@android:color/white"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="5" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sns_posting_register"
            android:layout_width="97dp"
            android:layout_height="42dp"
            android:layout_marginLeft="211dp"
            android:layout_marginTop="591dp"
            android:background="@drawable/img_sns_posting_register_btn"
            android:fontFamily="@font/inter_semibold"
            android:lineHeight="18.15dp"
            android:onClick="openGallery"
            android:stateListAnimator="@null"
            android:text="등록하기"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sns_posting_cancel"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="591dp"
            android:background="@drawable/img_sns_posting_cancel"
            android:fontFamily="@font/inter_semibold"
            android:lineHeight="18.15dp"
            android:stateListAnimator="@null"
            android:text="취소"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>