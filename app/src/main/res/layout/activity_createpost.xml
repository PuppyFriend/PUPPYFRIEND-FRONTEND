            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="11dp" />



        <TextView
            android:id="@+id/text_image_in_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10.88dp"
            android:layout_marginTop="15dp"
            android:text="게시물 내 이미지 0/1"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:textFontWeight="700"
            android:textSize="15dp"
            android:lineHeight="25.26dp"
            android:textColor="#000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            >

            <androidx.recyclerview.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recyclerView_gallery"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:background="@android:color/white"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="7dp"
                />


        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sns_posting_register"
            android:layout_width="97dp"
            android:layout_height="42dp"
            android:background="@drawable/img_sns_posting_register_btn"
            android:stateListAnimator="@null"
            android:text="등록하기"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semibold"
            android:textFontWeight="600"
            android:textSize="15dp"
            android:lineHeight="18.15dp"
            android:textColor="@color/black"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="211dp"
            android:layout_marginTop="155dp"
            android:onClick="openGallery"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sns_posting_cancel"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/img_sns_posting_cancel"
            android:stateListAnimator="@null"
            android:text="취소"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semibold"
            android:textFontWeight="600"
            android:textSize="15dp"
            android:lineHeight="18.15dp"
            android:textColor="@color/black"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="148dp"
