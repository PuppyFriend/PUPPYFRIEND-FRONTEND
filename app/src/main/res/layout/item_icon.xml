<?xml version="1.0" encoding="utf-8"?>
<!-- item_camera_button.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view_camera_clicker"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:background="#D9D9D9"
        android:contentDescription="camera_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_camera"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_clicker"
        app:layout_constraintEnd_toEndOf="@+id/view_camera_clicker"
        app:layout_constraintStart_toStartOf="@+id/view_camera_clicker"
        app:layout_constraintTop_toTopOf="@+id/view_camera_clicker" />

</androidx.constraintlayout.widget.ConstraintLayout>