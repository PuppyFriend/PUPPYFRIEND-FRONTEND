<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/img_puppy"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:background="@drawable/img_puppy_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="101.85dp"/>
        <TextView
            android:id="@+id/txt_puppyfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puppy Friend"
            android:fontFamily="@font/baloo_da2_extra_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="237.85dp"/>

        <EditText
            android:id="@+id/edittext_email_id"
            android:layout_width="273.28dp"
            android:layout_height="46dp"
            android:background="@drawable/style_login_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="310.35dp"
            android:hint="이메일 주소 또는 아이디"
            android:paddingStart="16.84dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="273.28dp"
            android:layout_height="46dp"
            android:background="@drawable/style_login_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="350.85dp"
            android:hint="비밀번호"
            android:paddingStart="16.84dp"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_auto"
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_btn_login_status"
            app:layout_constraintStart_toStartOf="@id/edittext_email_id"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="426.5dp"/>

        <TextView
            android:id="@+id/txt_login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/btn_login_auto"
            app:layout_constraintTop_toTopOf="@id/btn_login_auto"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_auto"
            android:text="로그인 상태 유지"
            android:textSize="12sp"
            android:textColor="#5F5E60"
            android:layout_marginStart="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="273.28dp"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="462.85dp"
            android:background="@drawable/style_login_btn"
            android:text="로그인"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sns 로그인"
            android:textSize="13sp"
            android:textColor="#C4C4C4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="569.29dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kakao"
            android:layout_width="21dp"
            android:layout_height="19.3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="600.29dp"
            android:background="@drawable/icon_login_kakao"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>