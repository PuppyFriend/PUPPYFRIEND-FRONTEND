<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="740dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/transparent">  <!-- 뒷배경 투명 처리 -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_startInfo"
        android:layout_width="261.4dp"
        android:layout_height="67.26dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="259.05dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="366.59dp"
        android:background="@drawable/style_radius_startbutton"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:lineHeight="22dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.51dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="61.68dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="추가 정보 입력하고\n퍼피프렌드 시작하기"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="500"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_startInfo"
        app:layout_constraintEnd_toEndOf="@+id/btn_startInfo"
        app:layout_constraintStart_toStartOf="@+id/btn_startInfo"
        app:layout_constraintTop_toTopOf="@+id/btn_startInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>
