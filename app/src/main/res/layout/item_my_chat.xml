<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp">
    <ImageView
        android:id="@+id/item_my_chat_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_chat_my_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/item_my_chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_chat_my_chat"
        android:text="안녕하세요!"
        android:textSize="8sp"
        android:includeFontPadding="false"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/black"
        android:maxWidth="200dp"/>

    <TextView
        android:id="@+id/item_txt_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_my_chat_iv"
        app:layout_constraintEnd_toStartOf="@id/item_my_chat_iv"
        android:text="10:04"
        android:textSize="6sp"
        android:fontFamily="@font/inter_400"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>