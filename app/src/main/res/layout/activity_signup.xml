<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_inner_page_top" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scrollbars="none">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_name"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="146.98dp"
                android:hint="이름"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_nickname"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="231.98dp"
                android:hint="닉네임"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_id"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="315.98dp"
                android:hint="아이디"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_password"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="401.98dp"
                android:hint="비밀번호"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_password_check"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="489.98dp"
                android:hint="비밀번호 확인"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_password_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_telecom"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="577.98dp"
                android:hint="통신사"
                app:errorEnabled="true"
                style="@style/TextInputLayoutDropDownStyle">
                <AutoCompleteTextView
                    android:id="@+id/textInputEdit_telecom"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_phone_number"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="662.98dp"
                android:hint="전화번호"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send_number"
                android:layout_width="64.42dp"
                android:layout_height="56.99dp"
                android:text="인증번호\n발송"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/textInput_phone_number"
                app:layout_constraintTop_toTopOf="@id/textInput_phone_number"
                app:layout_constraintBottom_toBottomOf="@id/textInput_phone_number"
                android:layout_marginTop="5dp"
                android:background="@drawable/style_signup_send"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_number"
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="747.98dp"
                android:hint="인증번호"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                style="@style/TextInputLayoutStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEdit_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_check_number"
                android:layout_width="64.42dp"
                android:layout_height="56.99dp"
                android:text="인증"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/textInput_number"
                app:layout_constraintTop_toTopOf="@id/textInput_number"
                app:layout_constraintBottom_toBottomOf="@id/textInput_number"
                android:layout_marginTop="5dp"
                android:background="@drawable/style_signup_send"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_stop_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"
                android:textSize="13sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/textInput_number"
                app:layout_constraintTop_toTopOf="@id/textInput_number"
                app:layout_constraintBottom_toBottomOf="@id/textInput_number"
                android:layout_marginEnd="15dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="315.01dp"
                android:layout_height="60.04dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInput_number"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="다음"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="112.57dp"
                android:layout_marginBottom="101.96dp"
                android:background="@drawable/style_signup_send" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="138dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정확한 정보를 입력해주세요"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="46dp"
        android:layout_marginTop="99dp"
        android:textStyle="bold"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/style_signup_done"
        android:text="ㅇㅇ"
        android:textAlignment="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>