<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="273dp"
    android:layout_height="332dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/style_chat_dialog">

    <TextView
        android:id="@+id/txt_notification1"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="'puppyfriend' 채팅 규정"
        android:textSize="13sp"
        android:fontFamily="@font/inter_600"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/txt_notification2"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="개인 정보 공유는 신중해주세요.\n개인정보나 연락처는 공개하지 마세요.\n절대로 돈을 보내거나 금융 정보를 공유하지 마세요.\n법과 규정을 준수해주세요.\n불법 콘텐츠나 행위가 엄격히 금지됩니다."
        android:textSize="11sp"
        android:fontFamily="@font/inter_600"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification1"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/txt_notification3"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="나의 사랑스런 강아지에게\n산책친구를 찾아주는 공간입니다."
        android:textSize="11sp"
        android:fontFamily="@font/inter_600"
        android:textColor="#FF0000"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification2"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/txt_notification4"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="앱 의도와 어긋나는 행위는 금지합니다."
        android:textSize="10sp"
        android:fontFamily="@font/inter_600"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification3" />

    <TextView
        android:id="@+id/txt_notification5"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="또 Puppyfriend는 그에 따른 책임을 지지 않습니다."
        android:textSize="10sp"
        android:fontFamily="@font/inter_600"
        android:textColor="#FF0000"
        android:textAlignment="center"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification4" />

    <TextView
        android:id="@+id/txt_notification6"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:text="사용자가 Puppyfriend를 요용하거나\n부적절, 불법, 또는 커뮤니티 가이드라인이나\n이용약관을 위반하는 것으로\n간주되는 행동을 할 경우 해당 계정을\n조사 및/또는 차단할 권리가 있습니다."
        android:textSize="10sp"
        android:fontFamily="@font/inter_600"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification5" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="65dp"
        android:layout_height="33dp"
        android:background="@drawable/style_chat_dialog_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_chat"
        app:layout_constraintTop_toBottomOf="@id/txt_notification6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/inter_600"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chat"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:background="@drawable/style_chat_dialog_btn"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="채팅하기"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/inter_600"/>



</androidx.constraintlayout.widget.ConstraintLayout>