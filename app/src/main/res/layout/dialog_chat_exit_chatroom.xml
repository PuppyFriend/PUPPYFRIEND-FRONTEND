<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230.05dp"
    android:layout_height="150.15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/style_chat_dialog">

    <TextView
        android:id="@+id/txt_notification"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:text="채팅방을 나가면 채팅 목록 및\n대화 내용이 삭제되고\n복구할 수 없어요.\n채팅방에서 나가시겠어요?"
        android:textSize="13sp"
        android:fontFamily="@font/inter_500"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18.9dp"
        android:layout_marginStart="25.51dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="65dp"
        android:layout_height="33dp"
        android:background="@drawable/style_chat_dialog_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_ok"
        app:layout_constraintTop_toBottomOf="@id/txt_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/inter_600"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:background="@drawable/style_chat_dialog_btn"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="네, 나갈래요"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/inter_600"/>



</androidx.constraintlayout.widget.ConstraintLayout>