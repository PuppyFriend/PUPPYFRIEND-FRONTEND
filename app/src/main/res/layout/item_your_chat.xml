<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/item_your_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_chat_profile_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_400"
        android:text="보호자 / 퍼피 프로필"
        app:layout_constraintStart_toEndOf="@id/item_your_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/item_your_chat_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_chat_your_chat"
        app:layout_constraintStart_toEndOf="@id/item_your_profile"
        app:layout_constraintTop_toBottomOf="@id/item_txt_name"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/item_your_chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_chat_your_chat"
        android:text="안녕하세요!"
        android:textSize="8sp"
        android:includeFontPadding="false"
        android:clickable="false"
        app:layout_constraintStart_toEndOf="@id/item_your_profile"
        app:layout_constraintTop_toBottomOf="@id/item_txt_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/black"
        android:maxWidth="200dp"/>

    <TextView
        android:id="@+id/item_txt_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_your_chat_iv"
        app:layout_constraintStart_toEndOf="@id/item_your_chat_iv"
        android:text="10:04"
        android:textSize="6sp"
        android:fontFamily="@font/inter_400"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:layout_marginStart="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>