<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 배경 색상 설정 -->
            <corners android:radius="8dp" /> <!-- 모서리 둥글기 설정 -->
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- 아래 그림자 색상 설정 -->
            <padding android:bottom="4dp" /> <!-- 아래 여백 설정 -->
        </shape>
    </item>
</layer-list>
